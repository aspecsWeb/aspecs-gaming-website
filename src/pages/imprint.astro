    <div class="max-w-7xl mx-auto px-8 md:px-12 text-center">
      <nav class="flex justify-between items-center mb-8">
        <div></div>
        <div>
          <a
            href="/"
            class="text-white text-lg hover:text-tomato-500 duration-200"
